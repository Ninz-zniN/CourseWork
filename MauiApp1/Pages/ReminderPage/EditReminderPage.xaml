<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.EditReminderPage"
             Title="EditReminderPage">
    <Grid Margin="7,2,7,4">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="0.25*"/>
        </Grid.RowDefinitions>
        <Border Style="{StaticResource HeadBorder}">
            <Label x:Name="Head" Margin="10" VerticalTextAlignment="Center"/>
        </Border>
        <Border Style="{StaticResource miniBorder}" Grid.Row="1">
            <Label x:Name="Description" Margin="5"/>
        </Border>
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Text="Назад" Clicked="BtnExitClicked" Margin="1.5,3,3,0" BackgroundColor="Gray" FontSize="20" TextColor="White"/>
            <Button Text="Удалить" Clicked="BtnDeleteClicked" Grid.Column="1" Margin="3,3,1.5,0" BackgroundColor="{StaticResource mFireBrick}" FontSize="20" TextColor="White"/>
        </Grid>
    </Grid>
</ContentPage>