<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.EditReminderPage"
             Title="EditReminderPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.45*"/>
            <RowDefinition Height="0.35*"/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>
        <Border Background="Pink" Margin="10">
            <Label x:Name="Head" Margin="10" VerticalTextAlignment="Center"/>
        </Border>
        <Border Background="GreenYellow" Grid.Row="1" Margin="10">
            <Label x:Name="Description" Margin="5"/>
        </Border>
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Text="Выйти" Clicked="BtnExitClicked" Margin="10,3,3,8" BackgroundColor="MediumVioletRed"/>
            <Button Text="Удалить" Clicked="BtnDeleteClicked" Grid.Column="1" Margin="3,3,10,8" BackgroundColor="DarkRed"/>
        </Grid>
    </Grid>
</ContentPage>