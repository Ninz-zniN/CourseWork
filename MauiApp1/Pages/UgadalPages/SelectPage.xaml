<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.SelectPage"
             Title="SelectPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.55*"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Text="Выберите сложность" FontSize="24" HorizontalOptions="Center" VerticalOptions="Center"/>
        <Button Text="Легко" Grid.Row="1" Clicked="Button_Clicked" Margin="10,15,10,25" Background="Green" FontSize="23"/>
        <Button Text="Средне" Grid.Row="2" Margin="10,15,10,25" FontSize="23"/>
        <Button Text="Сложно" Grid.Row="3" Margin="10,15,10,25" Background="IndianRed" FontSize="23"/>
        <Button Text="Индивидуально" Grid.Row="4" Margin="10,15,10,25" Background="MediumPurple" FontSize="23"/>
        <Button Text="Статистика" Grid.Row="5" Margin="10,15,10,25" FontSize="23"/>
    </Grid>
</ContentPage>