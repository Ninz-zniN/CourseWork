<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.RemindersPage"
             Title="RemindersPage">
    <Grid>
        <CollectionView x:Name="CollectionTasks" SelectionMode="Single" SelectionChanged="CollectionTasks_SelectionChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Margin="2" Background="AliceBlue">
                        <Grid Margin="10, 5, 10 , 8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Label Text="{Binding Header}" TextColor="DarkBlue" FontSize="16"/>
                            <HorizontalStackLayout Grid.Row="1" Grid.Column="1" HorizontalOptions="End">
                                <Label  Text="{Binding IsCompletedText}" TextColor="Green" FontAttributes="Bold"/>
                            </HorizontalStackLayout>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button Grid.Row="1" Text="+" FontSize="26" Clicked="Button_Clicked" HorizontalOptions="End" VerticalOptions="End" CornerRadius="180" HeightRequest="70" WidthRequest="70" Margin="0,0,15,15" BackgroundColor="ForestGreen"/>
    </Grid>
</ContentPage>